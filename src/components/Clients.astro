---
const clients = [
  { logo: '/logo-1-color.png', name: 'Client 1' },
  { logo: '/logo-2-color.png', name: 'Client 2' },
  { logo: '/logo-3-color.png', name: 'Client 3' },
  { logo: '/logo-4-color.png', name: 'Client 4' },
  { logo: '/logo-5-color.png', name: 'Client 5' },
  { logo: '/logo-6-color.png', name: 'Client 6' },
];
---

<section class="clients">
  <h3 class="h3 clients-title">Clients</h3>
  <ul class="clients-list has-scrollbar">
    {clients.map(client => (
      <li class="clients-item">
        <a href="#">
          <img src={client.logo || "/placeholder.svg"} alt={client.name} />
        </a>
      </li>
    ))}
  </ul>
</section>
